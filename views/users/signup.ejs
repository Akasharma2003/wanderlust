<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">Signup for wanderlust</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username">Username</label>
                    <input type="text" id="usename" name="username" class="form-control" required autofocus
                        autocomplete="off">
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="email">E-mail</label>
                    <input type="email" id="email" name="email" class="form-control" required autocomplete="off">
                </div>
                <div class="mb-3">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control" required
                        autocomplete="off">
                </div>
                <button class="btn btn-success">Signup</button>
            </form>
        </div>
    </div>